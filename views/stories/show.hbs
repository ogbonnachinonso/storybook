
<div class="row">
  <div class="col s12 m8">
    <div class="card story center-align">
    <h3 class="text">{{story.title}}
      {{!-- <small>{{{editIcon story.user user story.id false}}}</small> --}}
    </h3>
    
      <div class="card-content">
        <span class="card-title">{{formatDate date 'MMM Do YYYY, h:mm:ss a'}}</span>
        <div class="card-body">{{{story.body}}}</div>
      </div>
      <div class="mb-4">
        <a href="/stories" class="btn btn-orange mb-4">Back to Stories</a>
      </div>
    </div>
  </div>
  <div class="col s12 m4 pt-4">
    <div class="card center-align">
      <div class="card-content">
        <span class="card-title">{{{story.user.displayName}}}</span>
        <img src="{{{story.user.image}}}" class="circle responsive-img img-small" alt="OGB">
      </div>
      <div class="card-action"><a href="/stories/user/{{story.user._id}}" class="btn btn-dark">More
          From{{{story.user.firstName}}}</a>
      </div>
    </div>
  </div>
</div>